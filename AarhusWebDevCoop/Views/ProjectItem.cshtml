@inherits Umbraco.Web.Mvc.UmbracoViewPage<ProjectItem>
@{
	Layout = "Master.cshtml";
}

<div class="container">
    <!-- About Section Heading -->
    <h2 class="page-section-heading text-center text-uppercase">
        @Model.ProjectTitle 
        <br/><span class="badge badge-primary">@Model.ProjectStatus</span>
    </h2>

    <!-- Icon Divider -->
    <div class="divider-custom">
        <div class="divider-custom-line"></div>
        <div class="divider-custom-icon">
            <i class="fas fa-star"></i>
        </div>
        <div class="divider-custom-line"></div>
    </div>

    <!-- About Section Content -->
    <div class="row">
        <div class="col-lg-12 ml-auto">
            <p class="lead"> @Html.Raw(Model.ProjectDescription)</p>
        </div>
    </div>
</div>
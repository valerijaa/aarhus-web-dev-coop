@helper ShowDropDownItems(IEnumerable<IPublishedContent> items)
{
    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
        @foreach (var item in items)
        {
            <a class="dropdown-item" href="@item.Url">@item.Name</a>
        }
    </div>
}